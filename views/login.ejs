<%- include('./partials/header.ejs'); %>


<div class="container" id="login-container">
    <div class="">
        <div class="">
            <h1 class="text-center mb-5" id="loginTitle"><strong>Welcome back!</strong></h1>
            <div class="row justify-content-md-center">
                <% if(groupName) { %>
                    <form action="/login/<%= groupId %>/<%= token %>" method="POST" class="centered col-md-4">
                <% }  else { %>
                <form action="/login" method="POST" class="centered col-md-4">
                <% } %>
                    <% if(groupName) { %> 
                        <div class="form-group mb-2">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                <span class="input-group-text" id="groupIdLabel">Group</span>
                                </div>
                                <label for="staticGroup" class="sr-only">Group Name</label>
                                <input type="text" readonly class="form-control-plaintext pl-2" id="staticGroup" value="<%= groupName %>">
                            </div>
                            </div>
                    <% } %>
                    <div class="form-group">
                        <input type="text" class="form-control" id="username" name="username" placeholder="Username" autofocus required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Log in</button>
                    <hr class="hr-text" data-content="OR">
                    <div class="text-center">
                        <a href="/register" id="register-btn">Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs'); %>