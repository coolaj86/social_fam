<%- include('./partials/header.ejs'); %>


<div class="container" id="login-container">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <h1 class="text-left" id="loginTitle"><strong>Sign in</strong></h1>
            <h6 class="text-left text-muted mb-3">Sign in to continue to FamSocial</h6>
        
            <% if(groupName) { %>
                <form action="/login/<%= groupId %>/<%= token %>" method="POST" class="centered">
            <% }  else { %>
            <form action="/login" method="POST" class="centered">
            <% } %>
                <% if(groupName) { %> 
                    <div class="form-group mb-2">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                            <span class="input-group-text" id="groupIdLabel">Joining</span>
                            </div>
                            <label for="staticGroup" class="sr-only">Fam Name</label>
                            <input type="text" readonly class="form-control-plaintext pl-2" id="staticGroup" value="<%= groupName %>">
                        </div>
                        </div>
                <% } %>
                <div class="form-group">
                    <input type="text" class="form-control" id="email" name="email" placeholder="Email" autofocus required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                <div class="separator">or</div>

                <div class="text-center">
                    <a class="btn btn-primary btn-block" id="my-sig" href="/auth/google">
                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="18px" height="18px" viewBox="0 0 48 48" class="abcRioButtonSvg"><g><path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path><path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path><path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path><path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path><path fill="none" d="M0 0h48v48H0z"></path></g></svg>
                        Sign in with Google
                    </a>
                </div>
                <div class="separator">or</div>
                <% if(groupName) { %>
                    <div class="text-center">
                        <p><a href="javascript:history.back()">Create a new account</a> and join this Fam</p>
                    </div>

                    <div class="my-4">
                        <hr class="hr-text or" data-content="OR">
                    </div>

                    <div class="text-center">
                        <p><a href="/login" id="register-btn">Sign in</a> <strong>without</strong> joining this Fam</p>
                    </div>
                <% } else { %>
                    <div class="text-center">
                        <a href="/register" id="register-btn">Create a new account and a new Fam</a>
                    </div>
                <% } %>
            </form>
        </div>
    </div>
    
</div>


<div class="bg-social">
    <i class="fas fa-comment icon-1"></i>
    <i class="fas fa-comment icon-2"></i>
</div>

<%- include('./partials/footer.ejs'); %>