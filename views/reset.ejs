<%- include('./partials/header.ejs') %>

<div class="container col-md-6 col-lg-4 col-sm-8" id="login-form">
    <div class="row justify-content-md-center">
        <div class="col-md-6 col-l-4">
            <h1 class="text-center font-weight-bold">Reset Password</h1>

            <form class="mt-2" action="/reset/<%= token %>" method="POST">
                <div class="form-group">
                    <label for="password">New password</label>
                    <input type="password" id="password" name="password" class="form-control form-control-lg">
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control form-control-lg">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Reset password</button>
            </form>
            <p class="text-center mt-3">Back to <a href="/login">Sign in</a></p>
        </div>
    </div>
</div>

<div class="bg-social">
    <i class="fas fa-comment icon-1"></i>
    <i class="fas fa-comment icon-2"></i>
</div>


<%- include('./partials/footer.ejs') %>